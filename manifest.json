{
    "manifest_version": 3,
    "name": "JWT Resolver",
    "description": "Extension for resolving JWT by using selection",
    "version": "1.0",
    "action": {
        "default_popup": "./popup/popup.html",
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "js": [
                "./scripts/init.js",
                "./scripts/on_text_selected.js"
            ],
            "css": [
                "./styles/core.css",
                "./styles/float_btn.css",
                "./styles/view_panel.css"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ]
}